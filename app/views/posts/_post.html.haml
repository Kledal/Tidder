- present(post) do |post|
  .clearfix.box.post-container{id: "posts:#{post.id}" }
    .post-vote-buttons.pull-left
      = link_to upvote_post_path(post), remote: true, method: :put, class: "btn btn-default btn-xs" do
        = fa_icon 'angle-up'
      .score= post.score
      = link_to downvote_post_path(post), remote: true, method: :put, class: "btn btn-default btn-xs" do
        = fa_icon 'angle-down'

    .post-content.pull-left
      %h2
        =link_to post.title, post.link
        %br
        %small.author
          Submitted by
          = post.submitted_by
      %small.information
        = link_to post do
          = post.total_comments
          = t('.comments')
